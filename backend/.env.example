# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reddy_anna
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reddy_anna
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# OvenMediaEngine Configuration
OME_API_URL=http://localhost:8081
OME_RTMP_URL=rtmp://localhost:1935
OME_WEBRTC_URL=ws://localhost:3333
OME_HLS_URL=http://localhost:8080

# Stream Configuration
STREAM_APP_NAME=live
STREAM_SECRET_KEY=your-stream-secret-key

# WhatsApp Business API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Admin Credentials (for initial setup)
ADMIN_PHONE=+919999999999
ADMIN_PASSWORD=Admin@123456
ADMIN_EMAIL=admin@reddyanna.com

# Payment Gateway Configuration (if needed)
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@reddyanna.com

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Game Configuration
MIN_BET_AMOUNT=10
MAX_BET_AMOUNT=100000
DEFAULT_COMMISSION_RATE=2.5

# Bonus Configuration
WELCOME_BONUS=100
REFERRAL_BONUS_REFERRER=50
REFERRAL_BONUS_REFEREE=50
MIN_WITHDRAWAL_AMOUNT=500
MAX_WITHDRAWAL_AMOUNT=100000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.