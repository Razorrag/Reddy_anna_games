# =========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =========================================
# Copy this file to .env and fill in your values
# WARNING: Never commit .env file to version control!
# =========================================

# PostgreSQL Database
POSTGRES_DB=reddy_anna
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis Cache
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# JWT Authentication
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG

# Frontend URLs (replace with your VPS IP or domain)
FRONTEND_URL=http://YOUR_VPS_IP_OR_DOMAIN
VITE_API_URL=http://YOUR_VPS_IP_OR_DOMAIN/api
VITE_WS_URL=ws://YOUR_VPS_IP_OR_DOMAIN
VITE_STREAM_URL=http://YOUR_VPS_IP_OR_DOMAIN/live

# Payment Configuration (WhatsApp-based)
WHATSAPP_PAYMENT_NUMBER=+91XXXXXXXXXX
PAYMENT_UPI_ID=your-upi-id@bank

# OvenMediaEngine (Streaming)
OME_API_KEY=your-ome-api-key

# Optional: SSL Configuration
# Uncomment when you have SSL certificates
# SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
# SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Optional: Domain name for SSL
# DOMAIN_NAME=yourdomain.com
